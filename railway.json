{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm --prefix backend/server ci || npm --prefix backend/server install"
  },
  "deploy": {
    "startCommand": "npm --prefix backend/server start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
