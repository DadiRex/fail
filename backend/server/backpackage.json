// server.js (ESM, hardened, Railway-ready)
import express from "express";
import compression from "compression";
import cors from "cors";
import helmet from "helmet";
import rateLimit from "express-rate-limit";
import pino from "pino";
import { OpenAI } from "openai";
import { z } from "zod";

/* ---------- setup ---------- */
const log = pino({ level: process.env.LOG_LEVEL || "info" });
const app = express();

app.use(helmet({ contentSecurityPolicy: false }));
app.use(cors({ origin: true }));
app.use(compression());
app.use(express.json({ limit: "4mb" }));

app.use(
  rateLimit({
    windowMs: 60 * 1000,
    max: 60,
    standardHeaders: true,
    legacyHeaders: false
  })
);

if (!process.env.OPENAI_API_KEY) {
  log.warn("OPENAI_API_KEY not set; OpenAI endpoints will fail until you set it.");
}

// lazy-init OpenAI client (avoids boot error if key missing at build)
let openai = null;
function getOpenAI() {
  if (!process.env.OPENAI_API_KEY) {
    const err = new Error("OPENAI_API_KEY not set");
    err.status = 500;
    throw err;
  }
  if (!openai) openai = new OpenAI({ apiKey: process.env.OPENAI_API_KEY });
  return openai;
}
const MODEL = process.env.OPENAI_MODEL || "gpt-4o-mini";

/* ---------- schemas ---------- */
const CharacterReq = z.object({
  prompt: z.string().min(1).default("Create a kid-friendly STEM character."),
  audience: z.string().default("ages 6–10"),
  style: z.string().default("bright 2D cartoon"),
  constraints: z.string().default("original; no resemblance to existing IP")
});
const CharacterRes = z.object({
  name: z.string(),
  species_or_type: z.string(),
  visual_description: z.string(),
  personality: z.string(),
  catchphrases: z.array(z.string()).optional().default([]),
  strengths: z.array(z.string()).optional().default([]),
  quirks: z.array(z.string()).optional().default([]),
  stem_domain: z.string(),
  color_palette: z.array(z.string()).optional().default([]),
  do_not_copy: z.string()
});

const StoryReq = z.object({
  title: z.string().default("Adventure in Volcano Valley"),
  topic: z.string().default("volcano science"),
  target_age: z.string().default("6–10"),
  minutes: z.number().int().min(1).max(15).default(3),
  characters: z.array(z.any()).default([]),
  moral: z.string().default("Curiosity + safety"),
  educational_goals: z.array(z.string()).default([
    "Basic volcano formation",
    "Safety around natural phenomena",
    "Scientific observation skills"
  ])
});
const StoryRes = z.object({
  title: z.string(),
  opening: z.string(),
  scenes: z.array(
    z.object({
      setting: z.string(),
      action: z.string(),
      dialogue: z.string(),
      duration: z.number()
    })
  ),
  closing: z.string(),
  moral: z.string(),
  educational_goals: z.array(z.string()),
  total_duration: z.number()
});

/* ---------- helpers ---------- */
function sendSSEHeaders(res) {
  res.writeHead(200, {
    "Content-Type": "text/event-stream; charset=utf-8",
    "Cache-Control": "no-cache, no-transform",
    "Connection": "keep-alive",
    "X-Accel-Buffering": "no"
  });
}
function safeParseJSON(str) {
  try {
    return JSON.parse(str);
  } catch {
    const m = str && String(str).match(/\{[\s\S]*\}$/);
    if (m) { try { return JSON.parse(m[0]); } catch {} }
    return null;
  }
}

/* ---------- endpoints ---------- */
app.get("/healthz", (_req, res) => {
  res.json({ status: "healthy", timestamp: new Date().toISOString() });
});

app.get("/__selfcheck", (_req, res) => {
  res.json({
    status: "ok",
    model: MODEL,
    hasOpenAI: !!process.env.OPENAI_API_KEY,
    timestamp: new Date().toISOString()
  });
});

// create character
app.post("/api/character", async (req, res) => {
  try {
    const body = CharacterReq.parse(req.body || {});
    const oi = getOpenAI();

    const completion = await oi.chat.completions.create({
      model: MODEL,
      temperature: 0.7,
      response_format: { type: "json_object" },
      messages: [
        {
          role: "system",
          content:
            "You are a character designer for STEM education. Create original, kid-safe characters that inspire curiosity."
        },
        {
          role: "user",
          content: `Design a character with these requirements: ${body.prompt}. Target audience: ${body.audience}. Style: ${body.style}. Constraints: ${body.constraints}`
        }
      ]
    });

    const raw = completion.choices?.[0]?.message?.content || "";
    const parsed = safeParseJSON(raw);
    if (!parsed) throw new Error("Failed to parse OpenAI response as JSON");
    const result = CharacterRes.parse(parsed);
    res.json({ ok: true, character: result });
  } catch (error) {
    const msg = error?.message || "Character generation failed";
    log.error({ msg }, "character_failed");
    res.status(500).json({ ok: false, error: "character_failed", details: msg });
  }
});

// create story
app.post("/api/story", async (req, res) => {
  try {
    const body = StoryReq.parse(req.body || {});
    const oi = getOpenAI();

    const completion = await oi.chat.completions.create({
      model: MODEL,
      temperature: 0.7,
      response_format: { type: "json_object" },
      messages: [
        {
          role: "system",
          content:
            "You are a storyteller for STEM education. Write engaging, educational stories for children."
        },
        {
          role: "user",
          content: `Create a story about ${body.topic} for ages ${body.target_age}. Duration: ${body.minutes} minutes. Include these characters: ${body.characters
            .map((c) => (typeof c === "string" ? c : c?.name || "character"))
            .join(", ")}. Moral: ${body.moral}. Educational goals: ${body.educational_goals.join(", ")}`
        }
      ]
    });

    const raw = completion.choices?.[0]?.message?.content || "";
    const parsed = safeParseJSON(raw);
    if (!parsed) throw new Error("Failed to parse OpenAI response as JSON");
    const result = StoryRes.parse(parsed);
    res.json({ ok: true, script: result });
  } catch (error) {
    const msg = error?.message || "Story generation failed";
    log.error({ msg }, "story_failed");
    res.status(500).json({ ok: false, error: "story_failed", details: msg });
  }
});

// ask (SSE streaming)
app.post("/api/ask", async (req, res) => {
  try {
    const { question } = req.body || {};
    if (!question) return res.status(400).json({ error: "Question is required" });

    const oi = getOpenAI();
    sendSSEHeaders(res);

    const stream = await oi.chat.completions.create({
      model: MODEL,
      stream: true,
      temperature: 0.7,
      messages: [
        {
          role: "system",
          content:
            "You are a friendly STEM tutor for kids. Keep answers simple, engaging, and age-appropriate. Include a 1-line safety note if needed."
        },
        { role: "user", content: question }
      ]
    });

    for await (const chunk of stream) {
      const token = chunk?.choices?.[0]?.delta?.content;
      if (token) res.write(`data: ${JSON.stringify({ content: token })}\n\n`);
    }
    res.write("data: [DONE]\n\n");
    res.end();
  } catch (error) {
    const msg = error?.message || "Ask endpoint failed";
    log.error({ msg }, "ask_failed");
    if (!res.headersSent) return res.status(500).json({ ok: false, error: "ask_failed", details: msg });
    try { res.end("\n"); } catch {}
  }
});

/* ---------- error handling ---------- */
app.use((error, req, res, _next) => {
  log.error({ error: error?.message, stack: error?.stack, url: req.url }, "Unhandled error");
  if (res.headersSent) return;
  res.status(500).json({ error: "Internal server error" });
});

/* ---------- process guards ---------- */
process.on("unhandledRejection", (reason) => {
  log.error({ reason }, "UnhandledRejection");
});
process.on("uncaughtException", (err) => {
  log.error({ err }, "UncaughtException");
});

/* ---------- start server (Railway) ---------- */
const PORT = Number(process.env.PORT || 0);
const HOST = "0.0.0.0";
app.listen(PORT, HOST, () => {
  log.info(`Server running on http://${HOST}:${PORT}`);
});
